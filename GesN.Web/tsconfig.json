{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "outDir": "wwwroot/js/",
    "rootDir": "TypeScript/",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "removeComments": false,
    "declaration": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "newLine": "crlf",
    "preserveConstEnums": true,
    "preserveSymlinks": false
  },
  "include": [
    "TypeScript/**/*"
  ],
  "exclude": [
    "node_modules",
    "wwwroot",
    "Views",
    "bin",
    "obj"
  ],
  "compileOnSave": true,
  "ts-node": {
    "compilerOptions": {
      "newLine": "crlf"
    }
  }
}

