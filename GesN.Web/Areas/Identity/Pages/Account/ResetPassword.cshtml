@page
@model GesN.Web.Areas.Identity.Pages.Account.ResetPasswordModel
@{
    ViewData["Title"] = "Redefinir senha";
}

<h1>@ViewData["Title"]</h1>
<h4>Redefina sua senha.</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Input.Code" type="hidden" />
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group position-relative">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" id="resetPassword" />
                <button type="button" class="btn position-absolute end-0 top-50 translate-middle-y border-0 bg-transparent pe-3"
                        onclick="togglePasswordVisibility('resetPassword', 'resetPasswordIcon')">
                    <i id="resetPasswordIcon" class="bi bi-eye"></i>
                </button>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group position-relative">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" id="resetConfirmPassword" />
                <button type="button" class="btn position-absolute end-0 top-50 translate-middle-y border-0 bg-transparent pe-3"
                        onclick="togglePasswordVisibility('resetConfirmPassword', 'resetConfirmPasswordIcon')">
                    <i id="resetConfirmPasswordIcon" class="bi bi-eye"></i>
                </button>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Redefinir</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/password-visibility.js"></script>
} 