@model GesN.Web.Areas.Admin.Controllers.AddClaimViewModel

@{
    ViewData["Title"] = $"Adicionar Permissão - {Model.RoleName}";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">Adicionar Permissão à Role: @Model.RoleName</h5>
            </div>
            <div class="card-body">
                <form asp-action="AddClaim" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="RoleId" />
                    <input type="hidden" asp-for="RoleName" />
                    
                    <div class="mb-3">
                        <label asp-for="ClaimType" class="form-label">Tipo de Permissão</label>
                        <select asp-for="ClaimType" class="form-select">
                            <option value="">Selecione o tipo...</option>
                            <option value="permissao">Permissão</option>
                            <option value="recurso">Recurso</option>
                            <option value="modulo">Módulo</option>
                        </select>
                        <span asp-validation-for="ClaimType" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="ClaimValue" class="form-label">Valor da Permissão</label>
                        <input asp-for="ClaimValue" class="form-control" />
                        <span asp-validation-for="ClaimValue" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mt-4">
                        <button type="submit" class="btn btn-success">Adicionar</button>
                        <a asp-action="Details" asp-route-id="@Model.RoleId" class="btn btn-secondary">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 