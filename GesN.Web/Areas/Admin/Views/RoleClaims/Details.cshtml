@model GesN.Web.Areas.Admin.Controllers.RoleClaimsViewModel

@{
    ViewData["Title"] = $"Detalhes de Permissões - {Model.Role.Name}";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">Permissões da Role: @Model.Role.Name</h5>
            </div>
            <div class="card-body">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                
                <div class="mb-3">
                    <a asp-action="AssignPermissions" asp-route-roleId="@Model.Role.Id" class="btn btn-primary">Editar Permissões</a>
                    <a asp-action="AddClaim" asp-route-roleId="@Model.Role.Id" class="btn btn-success">Adicionar Permissão</a>
                </div>
                
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Tipo de Permissão</th>
                                <th>Valor</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Claims.Any())
                            {
                                foreach (var claim in Model.Claims)
                                {
                                    <tr>
                                        <td>@claim.Type</td>
                                        <td>@claim.Value</td>
                                        <td>
                                            <form asp-action="DeleteClaim" method="post" onsubmit="return confirm('Tem certeza que deseja remover esta permissão?');">
                                                <input type="hidden" name="roleId" value="@Model.Role.Id" />
                                                <input type="hidden" name="claimType" value="@claim.Type" />
                                                <input type="hidden" name="claimValue" value="@claim.Value" />
                                                <button type="submit" class="btn btn-danger btn-sm">Remover</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="3" class="text-center">Nenhuma permissão encontrada.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Voltar para Lista</a> 