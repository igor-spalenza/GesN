@model GesN.Web.Areas.Identity.Data.Models.ApplicationRole

@{
    ViewData["Title"] = "Excluir Role";
}

<h1>@ViewData["Title"]</h1>

<h3>Tem certeza que deseja excluir esta role?</h3>
<div>
    <h4>Role</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nome
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Voltar para Lista</a>
    </form>
</div> 