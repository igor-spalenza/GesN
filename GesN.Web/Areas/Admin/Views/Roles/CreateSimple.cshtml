@{
    ViewData["Title"] = "Criar Role (Método Simplificado)";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        @if (ViewBag.SuccessMessage != null)
        {
            <div class="alert alert-success">
                @ViewBag.SuccessMessage
            </div>
        }
        
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">
                @ViewBag.ErrorMessage
            </div>
        }
        
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Criar Role (Método Alternativo)</h5>
            </div>
            <div class="card-body">
                <p class="card-text">Este formulário usa um método alternativo para criar roles, ignorando a validação de modelo.</p>
                
                <form asp-action="CreateSimple" method="post">
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label for="roleName" class="control-label">Nome da Role</label>
                        <input type="text" id="roleName" name="roleName" class="form-control" required />
                    </div>
                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-primary">Criar Role</button>
                        <a asp-action="Index" class="btn btn-secondary">Voltar para Lista</a>
                    </div>
                </form>
            </div>
        </div>
        
        <div class="mt-4">
            <a asp-action="Create" class="btn btn-outline-primary">Ir para Método Padrão</a>
        </div>
    </div>
</div> 