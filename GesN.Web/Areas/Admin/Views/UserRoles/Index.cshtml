@model GesN.Web.Areas.Admin.Controllers.UserRolesViewModel

@{
    ViewData["Title"] = "Gerenciar Roles do Usuário";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Usuário: @Model.UserName</h5>
            </div>
            <div class="card-body">
                <form method="post" asp-action="Update">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="UserId" />
                    <input type="hidden" asp-for="UserName" />

                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Role</th>
                                    <th class="text-center">Atribuída</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.Roles.Count; i++)
                                {
                                    <tr>
                                        <td>
                                            <input type="hidden" asp-for="@Model.Roles[i].RoleId" />
                                            <input type="hidden" asp-for="@Model.Roles[i].RoleName" />
                                            @Model.Roles[i].RoleName
                                        </td>
                                        <td class="text-center">
                                            <div class="form-check form-switch d-flex justify-content-center">
                                                <input class="form-check-input" type="checkbox" asp-for="@Model.Roles[i].IsSelected">
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-primary">Salvar</button>
                        <a asp-controller="Users" asp-action="Details" asp-route-id="@Model.UserId" class="btn btn-secondary">Voltar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 