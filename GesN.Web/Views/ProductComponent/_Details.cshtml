@model GesN.Web.Models.ViewModels.Production.ProductComponentDetailsViewModel

<div class="row">
    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-header bg-primary text-white">
                <h6 class="mb-0">
                    <i class="fas fa-info-circle"></i>
                    Informações Básicas
                </h6>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Nome:</dt>
                    <dd class="col-sm-8">
                        <strong>@Model.Name</strong>
                    </dd>

                    <dt class="col-sm-4">Descrição:</dt>
                    <dd class="col-sm-8">
                        @if (!string.IsNullOrWhiteSpace(Model.Description))
                        {
                            <span>@Model.Description</span>
                        }
                        else
                        {
                            <em class="text-muted">Não informada</em>
                        }
                    </dd>

                    <dt class="col-sm-4">Status:</dt>
                    <dd class="col-sm-8">
                        @if (Model.StateCode == GesN.Web.Models.Enumerators.ObjectState.Active)
                        {
                            <span class="badge badge-success">✅ Ativo</span>
                        }
                        else
                        {
                            <span class="badge badge-danger">❌ Inativo</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-header bg-info text-white">
                <h6 class="mb-0">
                    <i class="fas fa-sitemap"></i>
                    Hierarquia e Custos
                </h6>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-5">Hierarquia:</dt>
                    <dd class="col-sm-7">
                        <span class="badge badge-secondary">
                            @(Model.ProductComponentHierarchyName ?? "Não definida")
                        </span>
                    </dd>

                    <dt class="col-sm-5">Custo Adicional:</dt>
                    <dd class="col-sm-7">
                        <span class="text-success font-weight-bold h5">
                            @Model.FormattedAdditionalCost
                        </span>
                    </dd>
                </dl>

                @if (Model.AdditionalCost > 0)
                {
                    <div class="alert alert-success">
                        <small>
                            <i class="fas fa-info-circle"></i>
                            Este componente possui custo adicional de <strong>@Model.FormattedAdditionalCost</strong>
                        </small>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="row mt-3">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-secondary text-white">
                <h6 class="mb-0">
                    <i class="fas fa-history"></i>
                    Informações de Auditoria
                </h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Criado em:</dt>
                            <dd class="col-sm-8">
                                <small class="text-muted">
                                    <i class="fas fa-calendar-plus"></i>
                                    @Model.FormattedCreatedAt
                                </small>
                            </dd>

                            <dt class="col-sm-4">Criado por:</dt>
                            <dd class="col-sm-8">
                                <small class="text-muted">
                                    <i class="fas fa-user"></i>
                                    @Model.CreatedBy
                                </small>
                            </dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-5">Última modificação:</dt>
                            <dd class="col-sm-7">
                                <small class="text-muted">
                                    <i class="fas fa-calendar-edit"></i>
                                    @Model.FormattedLastModifiedAt
                                </small>
                            </dd>

                            <dt class="col-sm-5">Modificado por:</dt>
                            <dd class="col-sm-7">
                                <small class="text-muted">
                                    <i class="fas fa-user-edit"></i>
                                    @(Model.LastModifiedBy ?? "Nunca modificado")
                                </small>
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@if (!string.IsNullOrWhiteSpace(Model.Summary))
{
    <div class="row mt-3">
        <div class="col-12">
            <div class="alert alert-light border">
                <h6 class="alert-heading">
                    <i class="fas fa-clipboard-list"></i>
                    Resumo
                </h6>
                <p class="mb-0">@Model.Summary</p>
            </div>
        </div>
    </div>
} 