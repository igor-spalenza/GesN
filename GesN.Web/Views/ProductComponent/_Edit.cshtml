@model GesN.Web.Models.ViewModels.Production.EditProductComponentViewModel
@using GesN.Web.Models.Enumerators

@{
    var availableProducts = ViewBag.ComponentProducts as IEnumerable<dynamic> ?? Enumerable.Empty<dynamic>();
    var units = Enum.GetValues(typeof(ProductionUnit)).Cast<ProductionUnit>();
}

<form id="formEditComponent" method="post">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.CompositeProductId)
    @Html.HiddenFor(m => m.CreatedBy)
    @Html.HiddenFor(m => m.StateCode)

    <div class="row">
        <!-- Produto Componente -->
        <div class="col-md-6 mb-3">
            <div class="floating-input-group">
                <select asp-for="ComponentProductId" class="form-select floating-select select2-component" required>
                    <option value="">Selecione um produto...</option>
                    @foreach (var product in availableProducts)
                    {
                        <option value="@product.Id" selected="@(product.Id == Model.ComponentProductId)">@product.Name</option>
                    }
                </select>
                <label asp-for="ComponentProductId" class="floating-label">
                    <i class="fas fa-box text-primary"></i>
                    Produto Componente
                </label>
                <span asp-validation-for="ComponentProductId" class="text-danger"></span>
            </div>
        </div>

        <!-- Quantidade -->
        <div class="col-md-3 mb-3">
            <div class="floating-input-group">
                <input asp-for="Quantity" type="number" 
                       class="form-control floating-input component-quantity" 
                       step="0.01" min="0.01" placeholder=" " required />
                <label asp-for="Quantity" class="floating-label">
                    <i class="fas fa-calculator text-primary"></i>
                    Quantidade
                </label>
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
        </div>

        <!-- Unidade -->
        <div class="col-md-3 mb-3">
            <div class="floating-input-group">
                <select asp-for="Unit" class="form-select floating-select" required>
                    @foreach (var unit in units)
                    {
                        <option value="@unit" selected="@(unit.ToString() == Model.Unit)">@unit.ToString()</option>
                    }
                </select>
                <label asp-for="Unit" class="floating-label">
                    <i class="fas fa-balance-scale text-primary"></i>
                    Unidade
                </label>
                <span asp-validation-for="Unit" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Ordem de Montagem -->
        <div class="col-md-4 mb-3">
            <div class="floating-input-group">
                <input asp-for="AssemblyOrder" type="number" 
                       class="form-control floating-input" 
                       min="0" placeholder=" " />
                <label asp-for="AssemblyOrder" class="floating-label">
                    <i class="fas fa-sort-numeric-down text-primary"></i>
                    Ordem de Montagem
                </label>
                <span asp-validation-for="AssemblyOrder" class="text-danger"></span>
            </div>
        </div>

        <!-- Componente Opcional -->
        <div class="col-md-8 mb-3 d-flex align-items-center">
            <div class="form-check">
                <input asp-for="IsOptional" type="checkbox" class="form-check-input" />
                <label asp-for="IsOptional" class="form-check-label">
                    <i class="fas fa-question-circle text-info"></i>
                    Este componente é opcional
                </label>
            </div>
        </div>
    </div>

    <!-- Observações -->
    <div class="row">
        <div class="col-12 mb-3">
            <div class="floating-input-group">
                <textarea asp-for="Notes" class="form-control floating-textarea" 
                          rows="3" maxlength="500" placeholder=" "></textarea>
                <label asp-for="Notes" class="floating-label">
                    <i class="fas fa-sticky-note text-primary"></i>
                    Observações (opcional)
                </label>
                <span asp-validation-for="Notes" class="text-danger"></span>
                <div class="form-text">
                    <small class="text-muted">
                        <i class="fas fa-info-circle"></i>
                        Máximo 500 caracteres. Use este campo para instruções específicas de montagem ou observações importantes.
                    </small>
                </div>
            </div>
        </div>
    </div>

    <!-- Informações de Custo (será calculado dinamicamente) -->
    <div class="row">
        <div class="col-12">
            <div class="alert alert-info" id="componentCostInfo">
                <div class="d-flex align-items-center">
                    <i class="fas fa-calculator fa-2x text-primary me-3"></i>
                    <div>
                        <h6 class="mb-1">
                            <i class="fas fa-dollar-sign"></i>
                            Custo Estimado do Componente
                        </h6>
                        <div class="d-flex gap-3">
                            <span>
                                <strong>Custo Unitário:</strong> 
                                <span id="unitCost" class="text-success">R$ 0,00</span>
                            </span>
                            <span>
                                <strong>Quantidade:</strong> 
                                <span id="componentQuantity" class="text-primary">@Model.Quantity</span>
                            </span>
                            <span>
                                <strong>Total:</strong> 
                                <span id="totalCost" class="text-success fw-bold">R$ @Model.CalculateTotalCost().ToString("N2")</span>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Informações de Auditoria -->
    <div class="row">
        <div class="col-12">
            <div class="alert alert-light">
                <div class="row">
                    <div class="col-md-6">
                        <small class="text-muted">
                            <i class="fas fa-calendar-plus"></i>
                            <strong>Criado em:</strong> @(Model.CreatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "Não informado")
                        </small>
                    </div>
                    <div class="col-md-6">
                        <small class="text-muted">
                            <i class="fas fa-calendar-edit"></i>
                            <strong>Última modificação:</strong> @(Model.LastModifiedAt?.ToString("dd/MM/yyyy HH:mm") ?? "Nunca")
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<script>
$(document).ready(function() {
    // Inicializar formulário de edição
    if (typeof CompositeProduct !== 'undefined') {
        CompositeProduct.initializeForm();
        CompositeProduct.initializeEditForm();
    }
});
</script> 