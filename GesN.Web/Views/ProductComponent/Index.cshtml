@model GesN.Web.Models.ViewModels.Production.ProductComponentIndexViewModel

@{
    ViewData["Title"] = "Componentes de Produtos";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">@ViewData["Title"]</h3>
                    <div class="card-tools">
                        <a href="@Url.Action("Create")" class="btn btn-primary btn-sm">
                            <i class="fas fa-plus"></i> Novo Componente
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.Components.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped" id="componentsTable">
                                <thead>
                                    <tr>
                                        <th>Produto Composto</th>
                                        <th>Componente</th>
                                        <th>Quantidade</th>
                                        <th>Unidade</th>
                                        <th>Opcional</th>
                                        <th>Ordem</th>
                                        <th>Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var component in Model.Components)
                                    {
                                        <tr>
                                            <td>@component.CompositeProductName</td>
                                            <td>@component.ComponentProductName</td>
                                            <td>@component.Quantity.ToString("N2")</td>
                                            <td>@component.Unit</td>
                                            <td>
                                                @if (component.IsOptional)
                                                {
                                                    <span class="badge badge-info">Opcional</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-success">Obrigatório</span>
                                                }
                                            </td>
                                            <td>@component.AssemblyOrder</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("Details", new { id = component.Id })" 
                                                       class="btn btn-info btn-sm" title="Detalhes">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="@Url.Action("Edit", new { id = component.Id })" 
                                                       class="btn btn-warning btn-sm" title="Editar">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a href="@Url.Action("Delete", new { id = component.Id })" 
                                                       class="btn btn-danger btn-sm" title="Excluir">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            Nenhum componente cadastrado. <a href="@Url.Action("Create")">Clique aqui para criar o primeiro</a>.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/CompositeProduct.js"></script>
} 