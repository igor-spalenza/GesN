@model GesN.Web.Models.Entities.Production.ProductGroup

@{
    ViewData["Title"] = "Novo Grupo de Produtos";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-plus"></i> @ViewData["Title"]</h2>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left"></i> Voltar
    </a>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Informações do Grupo</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label asp-for="SKU" class="form-label">SKU</label>
                            <input asp-for="SKU" class="form-control" />
                            <span asp-validation-for="SKU" class="text-danger"></span>
                        </div>
                        <div class="col-md-8">
                            <label asp-for="Name" class="form-label">Nome *</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Descrição</label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-12">
                            <label asp-for="CategoryId" class="form-label">Categoria</label>
                            <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories">
                                <option value="">Selecione uma categoria</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="Price" class="form-label">Preço</label>
                            <div class="input-group">
                                <span class="input-group-text">R$</span>
                                <input asp-for="Price" class="form-control" step="0.01" />
                            </div>
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="UnitPrice" class="form-label">Preço Unitário</label>
                            <div class="input-group">
                                <span class="input-group-text">R$</span>
                                <input asp-for="UnitPrice" class="form-control" step="0.01" />
                            </div>
                            <span asp-validation-for="UnitPrice" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-check">
                                <input asp-for="StateCode" class="form-check-input" type="checkbox" value="1" checked />
                                <label asp-for="StateCode" class="form-check-label">
                                    Ativo
                                </label>
                            </div>
                        </div>
                    </div>

                    <hr />

                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Criar Grupo
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">Ajuda</h6>
            </div>
            <div class="card-body">
                <h6>Grupos de Produtos</h6>
                <p class="small text-muted">
                    Grupos permitem criar produtos compostos por múltiplos itens com opções e regras de troca.
                </p>

                <h6>Configurações</h6>
                <ul class="small text-muted">
                    <li><strong>Mín. Itens:</strong> Quantidade mínima obrigatória</li>
                    <li><strong>Máx. Itens:</strong> Limite máximo permitido</li>
                    <li><strong>Preço Base:</strong> Valor inicial do grupo</li>
                </ul>

                <h6>Próximos Passos</h6>
                <p class="small text-muted">
                    Após criar o grupo, você poderá:
                </p>
                <ul class="small text-muted">
                    <li>Adicionar itens ao grupo</li>
                    <li>Configurar opções</li>
                    <li>Definir regras de troca</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Máscara para preços
            $('#Price').mask('000.000.000,00', {reverse: true});
            $('#UnitPrice').mask('000.000.000,00', {reverse: true});
        });
    </script>
} 