@model GesN.Web.Models.ViewModels.Production.ProductGroupIndexViewModel

@{
    ViewData["Title"] = "Grupos de Produtos";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-layer-group"></i> @ViewData["Title"]</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Novo Grupo
    </a>
</div>

<!-- Filtros e Pesquisa -->
<div class="card mb-4">
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <div class="input-group">
                    <input type="text" id="searchInput" class="form-control" placeholder="Pesquisar grupos...">
                    <button class="btn btn-outline-secondary" type="button" id="searchBtn">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
            <div class="col-md-3">
                <select id="statusFilter" class="form-select">
                    <option value="">Todos os Status</option>
                    <option value="1">Ativo</option>
                    <option value="0">Inativo</option>
                </select>
            </div>
            <div class="col-md-3">
                <select id="categoryFilter" class="form-select">
                    <option value="">Todas as Categorias</option>
                </select>
            </div>
        </div>
    </div>
</div>

<!-- Tabela de Grupos -->
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover" id="groupsTable">
                <thead class="table-dark">
                    <tr>
                        <th>SKU</th>
                        <th>Nome</th>
                        <th>Categoria</th>
                        <th>Preço</th>
                        <th>Preço Unit.</th>
                        <th>Status</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var group in Model.Groups)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(group.SKU))
                                {
                                    <code>@group.SKU</code>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                <div>
                                    <strong>@group.Name</strong>
                                    @if (!string.IsNullOrEmpty(group.Description))
                                    {
                                        <br><small class="text-muted">@group.Description</small>
                                    }
                                </div>
                            </td>
                            <td>
                                @if (group.CategoryId != null)
                                {
                                    <span class="badge bg-secondary">@group.CategoryId</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                <span class="fw-bold text-success">
                                    @(group.Price.ToString("C"))
                                </span>
                            </td>
                            <td>
                                <span class="text-info">
                                    @(group.UnitPrice.ToString("C"))
                                </span>
                            </td>
                            <td>
                                @if (group.StateCode == ObjectState.Active)
                                {
                                    <span class="badge bg-success">Ativo</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inativo</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@group.Id" 
                                       class="btn btn-sm btn-outline-primary" title="Detalhes">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="ManageItems" asp-route-id="@group.Id" 
                                       class="btn btn-sm btn-outline-info" title="Gerenciar Itens">
                                        <i class="fas fa-list"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@group.Id" 
                                       class="btn btn-sm btn-outline-warning" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@group.Id" 
                                       class="btn btn-sm btn-outline-danger" title="Excluir">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!Model.Groups.Any())
        {
            <div class="text-center py-5">
                <i class="fas fa-layer-group fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">Nenhum grupo de produtos encontrado</h5>
                <p class="text-muted">Clique no botão "Novo Grupo" para criar o primeiro grupo.</p>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="~/js/ProductGroup.js"></script>
} 