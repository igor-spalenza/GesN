@model Pedido
@{
    //ViewData["Title"] = "Módulo de Vendas";
}
<link rel="stylesheet" href="https://code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"></script>

<style>
    .ui-autocomplete {
        position: absolute !important;
        display: block !important;
        background-color: white !important;
        border: 1px solid #ccc !important;
        max-height: 200px;
        overflow-y: auto;
        z-index: 9999 !important;
    }

    .ui-menu {
        list-style: none;
        padding: 5px;
        margin: 0;
        display: block;
    }

    .ui-menu-item {
        margin: 0;
        padding: 3px 0;
        cursor: pointer;
    }

        .ui-menu-item div {
            padding: 5px 10px;
            border-radius: 3px;
        }

    .ui-state-active,
    .ui-widget-content .ui-state-active {
        background-color: #007bff !important;
        color: white !important;
    }
</style>

<div class="row" id="createPedidoContainer">
    <div class="row">
        <div class="row">
            <div class="col-md-12">
                <h1>Identificação do Cliente</h1>
                <input type="text" id="buscarCliente" placeholder="Buscar Cliente..." class="border p-2 mb-2 w-full" /><br />
                <select id="tipoPedido" class="border p-2 mb-2 w-full">
                    <option value="encomenda">Encomenda</option>
                    <option value="evento">Evento</option>
                </select><br />
                <button class="btn btn-sales mb-3" id="btnAnotarPedido">Anotar Pedido</button>
            </div>
        </div>
        <h1>Novo Pedido</h1>
        <hr />
        <div class="row">
            <div class="col-md-12">
                <form id="createPedidoForm" action="/Pedido/SalvarNovo" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="DataCadastro" value="@DateTime.Now" />
                    <input type="hidden" asp-for="DataModificacao" value="@DateTime.Now" />

                    <div class="form-group">
                        <label asp-for="PedidoId" class="control-label"></label>
                        <input asp-for="PedidoId" class="form-control" />
                        <span asp-validation-for="PedidoId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ClienteId" class="control-label"></label>
                        <input asp-for="ClienteId" class="form-control" />
                        <span asp-validation-for="ClienteId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ColaboradorId" class="control-label"></label>
                        <input asp-for="ColaboradorId" class="form-control" />
                        <span asp-validation-for="ColaboradorId" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="DataPedido" class="control-label"></label>
                        <input asp-for="DataPedido" class="form-control" />
                        <span asp-validation-for="DataPedido" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-primary" id="btnSalvarPedido" onclick="pedidosManager.salvarNovoModal()">
                            <span class="spinner-border spinner-border-sm d-none" id="loadingSpinner" role="status" aria-hidden="true"></span>
                            Salvar Pedido
                        </button>
                    </div>
                </form>
            </div>
        </div>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>

<!-- Div que receberá a partial view de edição -->
<div id="editPedidoContainer" style="display: none;"></div>
<script>
    $(document).ready(function () {
        // Inicializa o autocomplete quando o modal for aberto/mostrado
        $("#pedidoModal").on("shown.bs.modal", function () {
            inicializarAutocomplete();
        });

        // Ou se você já está dentro do modal carregado, inicialize diretamente
        inicializarAutocomplete();

        function inicializarAutocomplete() {
            // Verificar se o elemento existe dentro do modal
            if ($("#buscarCliente").length === 0) {
                console.error("Campo #buscarCliente não encontrado");
                return;
            }

            console.log("Inicializando autocomplete no campo:", $("#buscarCliente").attr("id"));

            // Configuração especial para modal
            $("#buscarCliente").autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: "/Pedido/BuscarClienteNomeTel",
                        data: { termo: request.term },
                        dataType: "json",
                        success: function (data) {
                            console.log("Dados recebidos:", data);
                            response($.map(data, function (item) {
                                return {
                                    label: item.nome + " - " + item.telefonePrincipal,
                                    value: item.nome,
                                    id: item.id
                                };
                            }));
                        },
                        error: function (xhr, status, error) {
                            console.error("Erro na requisição:", error);
                            response([]);
                        }
                    });
                },
                minLength: 2,
                delay: 300,
                // Configurações específicas para modal
                appendTo: "#pedidoModal", // Anexa o menu ao modal
                position: {
                    my: "left top",
                    at: "left bottom",
                    collision: "none",
                    of: "#buscarCliente"
                },
                open: function (event, ui) {
                    // Garante que o menu fique visível
                    $(".ui-autocomplete").css("z-index", $("#pedidoModal").css("z-index") + 1);
                },
                select: function (event, ui) {
                    $("#ClienteId").val(ui.item.id);
                    return true;
                }
            }).data("ui-autocomplete")._renderMenu = function (ul, items) {
                var self = this;
                // Adiciona classe ao menu para estilos específicos
                $(ul).addClass("autocomplete-modal-menu");
                $.each(items, function (index, item) {
                    self._renderItemData(ul, item);
                });
            };

            console.log("Autocomplete inicializado com sucesso");
        }
    });
</script>

<style>
    /* Estilos específicos para autocomplete em modal */
    .autocomplete-modal-menu {
        z-index: 9999999 !important; /* Z-index extremamente alto */
        position: absolute !important;
        background-color: white !important;
        border: 2px solid #007bff !important;
        box-shadow: 0 4px 10px rgba(0,0,0,0.3) !important;
        max-height: 300px !important;
        overflow-y: auto !important;
        width: auto !important;
        min-width: 300px !important;
        font-size: 14px !important;
    }

        .autocomplete-modal-menu .ui-menu-item {
            padding: 0 !important;
            margin: 0 !important;
            border-bottom: 1px solid #eee !important;
        }

        .autocomplete-modal-menu .ui-menu-item-wrapper {
            padding: 8px 12px !important;
            display: block !important;
            cursor: pointer !important;
        }

            .autocomplete-modal-menu .ui-menu-item-wrapper:hover,
            .autocomplete-modal-menu .ui-state-active {
                background-color: #007bff !important;
                color: white !important;
                border: none !important;
                margin: 0 !important;
            }
</style>