@* @page *@
@using GesN.Web.PageModels
@model IEnumerable<Pedido>
@{
    ViewData["Title"] = "Vendas";
    ViewData["App"] = "Ferramenta de Vendas";
}

<div class="venda-main">
    <div class="container-fluid venda-lateral-fixa">
        <h1>Vendas</h1><br />

        <button type="button" class="btn btn-sales mb-3" onclick="pedidosManager.novoPedidoModal()">
            Novo Pedido
        </button><br />

        <h3 class="text-lg font-semibold mb-2">Lembretes</h3>
        <p class="text-sm">Sem lembretes no momento.</p>
    </div>

    <div class="venda-conteudo-dinamico">
        <!-- Abas Dinâmicas -->
        <ul class="nav nav-tabs" id="pedidosTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <a class="nav-link active" id="tab-lista-pedidos" data-bs-toggle="tab" href="#conteudo-lista-pedidos" role="tab">
                    <img class="vendas-principal" id="btnHomeVendas" src="~/img/inicio-icon.png" alt="Ícone de redirecionamento para a tela inicial" />
                    @* Principal *@
                </a>
            </li>
        </ul>

        <div class="modal fade" id="pedidoModal" tabindex="-1">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Pedido</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body"> </div>
                </div>
            </div>
        </div>

        <!-- Conteúdo das Abas -->
        <div class="tab-content" id="pedidoTabsContent">
            <div class="tab-pane fade active show" id="conteudo-lista-pedidos" role="tabpanel">
                <div id="lista-pedidos-container">
                    <div class="d-flex justify-content-center my-5">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Carregando...</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/Pedido.js" asp-append-version="true"></script>

}
