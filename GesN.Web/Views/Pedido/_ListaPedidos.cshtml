@model IEnumerable<Pedido>

<br />
<div id="barra-btns container-fluid" class="table-responsive">
    <button type="button" class="btn btn-outline-secondary" onclick="pedidosManager.carregarListaPedidos()">
        <i class="bi bi-arrow-clockwise"></i> Atualizar
    </button>
    <button type="button" class="btn btn-outline-secondary" onclick="pedidosManager.carregarListaPedidos()">
        <i class="bi bi-arrow-clockwise"></i> Atualizar 2
    </button>
</div>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-light">
            <tr>
                <th>Pedido ID</th>
                <th>ID do Colaborador</th>
                <th>ID Cliente</th>
                <th>Data Pedido</th>
                <th>Data Modificação</th>
                <th>Data Cadastro</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @if (Model?.Any() == true)
            {
                foreach (var pedido in Model)
                {
                    <tr id="pedido-@pedido.PedidoId">
                        <td>@pedido.PedidoId</td>
                        <td>@pedido.ColaboradorId</td>
                        <td>@pedido.ClienteId</td>
                        <td>@pedido.DataPedido.ToString("dd/MM/yyyy")</td>
                        <td>@pedido.DataModificacao.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@pedido.DataCadastro.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <button type="button" class="btn btn-outline-info" 
                                        onclick="pedidosManager.visualizarPedido(@pedido.PedidoId)">
                                    <i class="bi bi-eye"></i>Ver
                                </button>
                                <button type="button" class="btn btn-outline-primary" 
                                        onclick="pedidosManager.editarPedido(@pedido.PedidoId)">
                                    <i class="bi bi-pencil"></i>Editar
                                </button>
                                <button type="button" class="btn btn-outline-danger" 
                                        onclick="pedidosManager.excluirPedido(@pedido.PedidoId)">
                                    <i class="bi bi-trash"></i>Excluir
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center py-3">
                        Nenhum pedido encontrado.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>