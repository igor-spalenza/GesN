            <dt class="col-sm-3">Valor Total</dt>
            <dd class="col-sm-9">@Model.TotalAmount.ToString("C")</dd>
        </dl>
        <div id="orderItemsDetailsContainer">
            @await Html.PartialAsync("_OrderItems", Model.Items)
        </div>
    </div>
</div> 