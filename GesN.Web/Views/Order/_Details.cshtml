@model GesN.Web.Models.ViewModels.Sales.OrderDetailsViewModel
<div class="row" id="detailsOrderContainer">
    <div class="col-md-12">
        <h2>Detalhes do Pedido</h2>
        <dl class="row">
            <dt class="col-sm-3">NÃºmero</dt>
            <dd class="col-sm-9">@Model.NumberSequence</dd>
            <dt class="col-sm-3">Cliente</dt>
            <dd class="col-sm-9">@Model.CustomerName</dd>
            <dt class="col-sm-3">Data do Pedido</dt>
            <dd class="col-sm-9">@Model.FormattedOrderDate</dd>
            <dt class="col-sm-3">Data de Entrega</dt>
            <dd class="col-sm-9">@Model.FormattedDeliveryDate</dd>
