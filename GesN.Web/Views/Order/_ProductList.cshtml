@model IEnumerable<GesN.Web.Models.Entities.Production.Product>

@if (Model?.Any() == true)
{
    <div class="products-list-clean">
        @foreach (var product in Model)
        {
            <div class="product-list-item" data-product-id="@product.Id" data-product-type="@product.ProductType">
                <div class="product-row">
                    <div class="product-main-info">
                        <div class="product-name-section">
                            <h6 class="product-name">@product.Name</h6>
                            @if (product.ProductType != GesN.Web.Models.Enumerators.ProductType.Simple)
                            {
                                <span class="product-type-badge type-@(product.ProductType.ToString().ToLower())">
                                    @(product.ProductType == GesN.Web.Models.Enumerators.ProductType.Composite ? "Composto" : "Grupo")
                                </span>
                            }
                        </div>
                        
                        @if (!string.IsNullOrWhiteSpace(product.Description))
                        {
                            <p class="product-description">@product.Description</p>
                        }
                        
                        <div class="product-meta">
                            @if (!string.IsNullOrWhiteSpace(product.SKU))
                            {
                                <span class="product-sku">
                                    <i class="fas fa-barcode"></i> @product.SKU
                                </span>
                            }
                            @if (!string.IsNullOrWhiteSpace(product.Category))
                            {
                                <span class="product-category">
                                    <i class="fas fa-folder"></i> @product.Category
                                </span>
                            }
                        </div>
                    </div>
                    
                    <div class="product-price-action">
                        <div class="price-display">
                            <span class="currency-symbol">R$</span>
                            <span class="price-value">@product.UnitPrice.ToString("N2")</span>
                        </div>
                        <button class="btn btn-add-modern btn-add-to-cart" 
                                data-product-id="@product.Id"
                                data-product-name="@product.Name"
                                data-product-price="@product.UnitPrice">
                            <i class="fas fa-plus"></i>
                            <span class="btn-text">Adicionar</span>
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="catalog-empty-modern">
        <div class="empty-illustration">
            <i class="fas fa-boxes"></i>
        </div>
        <h6 class="empty-title">Nenhum produto encontrado</h6>
        <p class="empty-subtitle">Tente ajustar os filtros ou buscar por outros termos</p>
        <button class="btn btn-outline-primary btn-sm" onclick="window.productCatalogManager?.clearFilters()">
            <i class="fas fa-refresh"></i> Limpar Filtros
        </button>
    </div>
}