@model GesN.Web.Models.ViewModels.Production.ProductCatalogViewModel

<div class="product-catalog-modern">
    <!-- Header Moderno -->
    <div class="catalog-header-modern">
        <div class="header-content">
            <h5 class="catalog-title">
                <i class="fas fa-store"></i> Catálogo De Produtos
            </h5>
            <div class="catalog-quick-search">
                <div class="search-input-group">
                    <i class="fas fa-search search-icon"></i>
                    <input type="text" class="form-control search-input" id="product-search" 
                           placeholder="Buscar produtos..." autocomplete="off">
                    <button class="btn btn-search" type="button" id="search-btn">
                        <i class="fas fa-arrow-right"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Categorias Compactas -->
    <div class="catalog-categories">
        <div class="categories-scroll" id="categoryTabs">
            <button class="category-chip active" data-category="" data-category-name="Todos">
                <i class="fas fa-th-large"></i> Todos
            </button>
            <button class="category-chip" data-category="bolos" data-category-name="Bolos">
                <i class="fas fa-birthday-cake"></i> Bolos
            </button>
            <button class="category-chip" data-category="salgados" data-category-name="Salgados">
                <i class="fas fa-drumstick-bite"></i> Salgados
            </button>
            <button class="category-chip" data-category="doces" data-category-name="Doces">
                <i class="fas fa-candy-cane"></i> Doces
            </button>
            <button class="category-chip" data-category="kits" data-category-name="Kits">
                <i class="fas fa-gift"></i> Kits
            </button>
            <button class="category-chip" data-category="cardapios" data-category-name="Cardápios">
                <i class="fas fa-book-open"></i> Cardápios
            </button>
            <button class="category-chip" data-category="servicos" data-category-name="Serviços">
                <i class="fas fa-tools"></i> Serviços
            </button>
            <button class="category-chip" data-category="terceirizados" data-category-name="Terceirizados">
                <i class="fas fa-handshake"></i> Terceirizados
            </button>
        </div>
    </div>
    
    <!-- Lista de Produtos Moderna -->
    <div class="catalog-products-area">
        <div id="products-list" class="products-list-modern">
            <div class="products-loading">
                <div class="loading-spinner-modern">
                    <div class="spinner"></div>
                </div>
                <p class="loading-text">Carregando produtos...</p>
            </div>
        </div>
    </div>
    
    <!-- Footer com Paginação -->
    <div class="catalog-footer-modern">
        <div class="pagination-modern">
            <div class="pagination-info">
                <small class="text-muted" id="pagination-range">Carregando...</small>
            </div>
            <div class="pagination-controls">
                <button type="button" class="btn btn-pagination" id="prev-page" disabled>
                    <i class="fas fa-chevron-left"></i>
                </button>
                <span class="pagination-current" id="current-page">1</span>
                <button type="button" class="btn btn-pagination" id="next-page">
                    <i class="fas fa-chevron-right"></i>
                </button>
            </div>
            <div class="pagination-size">
                <select class="form-select form-select-sm" id="page-size">
                    <option value="5">5</option>
                    <option value="8" selected>8</option>
                    <option value="12">12</option>
                    <option value="16">16</option>
                </select>
            </div>
        </div>
    </div>
</div>



