@using GesN.Web.Models.ViewModels.Production
@model IEnumerable<ProductCategoryDetailsViewModel>

<!-- Barra de Pesquisa -->
<div class="d-flex gap-2">
    <div class="col-md-4">
        <button type="button" class="btn btn-outline-secondary w-100" onclick="productCategoriesManager.carregarListaCategorias()">
            <i class="bi bi-arrow-clockwise"></i>
        </button>
    </div>
</div>

<!-- Tabela de Categorias -->
<div class="table-responsive">
    <table class="table table-striped table-hover" id="categoriesTable">
        <thead class="table-dark">
            <tr>
                <th>Nome</th>
                <th>Descrição</th>
                <th>Status</th>
                <th>Criado em</th>
                <th width="120">Ações</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                @foreach (var categoria in Model)
                {
                    <tr>
                        <td>
                            <strong>@categoria.Name</strong>
                        </td>
                        <td>
                            @if (!string.IsNullOrWhiteSpace(categoria.Description))
                            {
                                @if (categoria.Description.Length > 50)
                                {
                                    <span title="@categoria.Description">
                                        @categoria.Description.Substring(0, 50)...
                                    </span>
                                }
                                else
                                {
                                    @categoria.Description
                                }
                            }
                            else
                            {
                                <span class="text-muted">Sem descrição</span>
                            }
                        </td>
                        <td>
                            @if (categoria.IsActive)
                            {
                                <span class="badge bg-success">Ativa</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inativa</span>
                            }
                        </td>
                        <td>@categoria.CreatedAt.ToString("dd/MM/yyyy")</td>
                        <td>
                            <div class="btn-group" role="group">
                                <button type="button" class="btn btn-outline-primary btn-sm" 
                                        onclick="productCategoriesManager.verDetalhes('@categoria.Id')" 
                                        title="Visualizar">
                                    <i class="bi bi-eye"></i>
                                </button>
                                <button type="button" class="btn btn-outline-secondary btn-sm" 
                                        onclick="productCategoriesManager.editarCategoria('@categoria.Id')" 
                                        title="Editar">
                                    <i class="bi bi-pencil"></i>
                                </button>
                                <button type="button" class="btn btn-outline-danger btn-sm" 
                                        onclick="productCategoriesManager.excluirCategoria('@categoria.Id', '@categoria.Name')" 
                                        title="Excluir">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center text-muted">
                        <i class="bi bi-inbox display-1 text-muted mb-2"></i>
                        <br />
                        Nenhuma categoria encontrada
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (Model.Any())
{
    <!-- Informações da Tabela -->
    <div class="row mt-3">
        <div class="col-md-6">
            <small class="text-muted">
                Mostrando @Model.Count() categoria(s)
            </small>
        </div>
        <div class="col-md-6 text-end">
            <small class="text-muted">
                <i class="bi bi-clock"></i> Atualizado em @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
            </small>
        </div>
    </div>
} 