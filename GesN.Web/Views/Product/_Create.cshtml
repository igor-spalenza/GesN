@using GesN.Web.Models.ViewModels.Production
@model CreateProductViewModel

@* Incluir CSS dos floating labels *@
<link href="~/css/product-form.css" rel="stylesheet" />

<form id="formNovoProduct" enctype="application/x-www-form-urlencoded">
    @Html.AntiForgeryToken()
    
    <!-- Informações Básicas do Produto -->
    <div class="product-form-card">
        <div class="card-header">
            <h6 class="card-title mb-0">
                <i class="fas fa-box"></i> Dados Básicos do Produto
            </h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <div class="floating-input-group">
                        <input asp-for="SKU" class="floating-input" placeholder=" " />
                        <label asp-for="SKU" class="floating-label">Código (SKU)</label>
                        <span asp-validation-for="SKU" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="floating-input-group">
                        <input asp-for="Name" class="floating-input" placeholder=" " required />
                        <label asp-for="Name" class="floating-label">Nome do Produto</label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-12">
                    <div class="floating-input-group">
                        <textarea asp-for="Description" class="floating-textarea" placeholder=" " rows="3"></textarea>
                        <label asp-for="Description" class="floating-label">Descrição</label>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="floating-input-group">
                        <select asp-for="ProductType" class="floating-select" id="productTypeSelect" required placeholder=" ">
                            @foreach (var type in Model.AvailableProductTypes)
                            {
                                <option value="@type.Value" selected="@type.IsSelected">@type.Text</option>
                            }
                        </select>
                        <label asp-for="ProductType" class="floating-label">Tipo de Produto</label>
                        <span asp-validation-for="ProductType" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="floating-input-group">
                        <select asp-for="CategoryId" class="form-select select2-category" placeholder=" ">
                            <option value=""></option>
                            @foreach (var category in Model.AvailableCategories)
                            {
                                <option value="@category.Value" selected="@category.IsSelected">@category.Text</option>
                            }
                        </select>
                        <label asp-for="CategoryId" class="floating-label">Categoria</label>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="floating-input-group floating-input-group-addon">
                        <span class="input-group-text">R$</span>
                        <input asp-for="Price" type="number" step="0.01" class="floating-input" placeholder=" " />
                        <label asp-for="Price" class="floating-label">Preço de Venda</label>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="floating-input-group floating-input-group-addon">
                        <span class="input-group-text">R$</span>
                        <input asp-for="UnitPrice" type="number" step="0.01" class="floating-input" placeholder=" " />
                        <label asp-for="UnitPrice" class="floating-label">Preço Unitário</label>
                        <span asp-validation-for="UnitPrice" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="floating-input-group floating-input-group-addon">
                        <span class="input-group-text">R$</span>
                        <input asp-for="Cost" type="number" step="0.01" class="floating-input" placeholder=" " />
                        <label asp-for="Cost" class="floating-label">Custo</label>
                        <span asp-validation-for="Cost" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Cálculo de margem -->
            <div class="row" id="marginSection" style="display: none;">
                <div class="col-md-12">
                    <div class="alert alert-info">
                        <strong>Margem de Lucro:</strong> 
                        <span id="marginDisplay">0%</span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="floating-input-group floating-input-group-addon">
                        <span class="input-group-text">R$</span>
                        <input asp-for="QuantityPrice" type="number" step="0.01" class="floating-input" placeholder=" " />
                        <label asp-for="QuantityPrice" class="floating-label">Preço por Quantidade</label>
                        <span asp-validation-for="QuantityPrice" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="floating-input-group">
                        <input asp-for="ImageUrl" type="url" class="floating-input" placeholder=" " />
                        <label asp-for="ImageUrl" class="floating-label">URL da Imagem</label>
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="floating-input-group">
                        <textarea asp-for="Note" class="floating-textarea" placeholder=" " rows="3"></textarea>
                        <label asp-for="Note" class="floating-label">Observações</label>
                        <span asp-validation-for="Note" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Informações de Montagem -->
    <div class="product-form-card">
        <div class="card-header">
            <h6 class="card-title mb-0">
                <i class="fas fa-tools"></i> Informações de Montagem
            </h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <div class="floating-input-group floating-input-group-addon suffix">
                        <input asp-for="AssemblyTime" type="number" class="floating-input" placeholder=" " />
                        <span class="input-group-text">min</span>
                        <label asp-for="AssemblyTime" class="floating-label">Tempo de Montagem</label>
                        <span asp-validation-for="AssemblyTime" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-12">
                    <div class="floating-input-group">
                        <textarea asp-for="AssemblyInstructions" class="floating-textarea" placeholder=" " rows="4"></textarea>
                        <label asp-for="AssemblyInstructions" class="floating-label">Instruções de Montagem</label>
                        <span asp-validation-for="AssemblyInstructions" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Informativo sobre funcionalidades avançadas -->
    <div class="alert alert-info mt-3">
        <i class="fas fa-info-circle"></i>
        <strong>Informação:</strong> Após criar o produto, você poderá configurar componentes, itens do grupo e outras funcionalidades avançadas através da opção "Editar".
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
            <i class="fas fa-times"></i> Cancelar
        </button>
        <button type="button" class="btn btn-primary" onclick="productManager.salvarNovoProduct()">
            <i class="fas fa-save"></i> Criar Produto
        </button>
    </div>
</form>

 