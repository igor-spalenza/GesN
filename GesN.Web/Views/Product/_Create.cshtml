@using GesN.Web.Models.ViewModels.Production
@model CreateProductViewModel

<form id="formNovoProduct" enctype="application/x-www-form-urlencoded">
    @Html.AntiForgeryToken()
    
    <!-- Informações Básicas do Produto -->
    <div class="card">
        <div class="card-header">
            <h6 class="card-title mb-0">
                <i class="fas fa-box"></i> Dados Básicos do Produto
            </h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <div class="mb-3">
                        <label asp-for="Code" class="form-label"></label>
                        <input asp-for="Code" class="form-control" placeholder="Código único do produto" required />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" placeholder="Nome do produto" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-12">
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="2" placeholder="Descrição do produto"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="mb-3">
                        <label asp-for="ProductType" class="form-label"></label>
                        <select asp-for="ProductType" class="form-select" id="productTypeSelect" required>
                            @foreach (var type in Model.AvailableProductTypes)
                            {
                                <option value="@type.Value" selected="@type.IsSelected">@type.Text</option>
                            }
                        </select>
                        <span asp-validation-for="ProductType" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label asp-for="CategoryId" class="form-label"></label>
                        <select asp-for="CategoryId" class="form-select">
                            <option value="">Selecione uma categoria</option>
                            @foreach (var category in Model.AvailableCategories)
                            {
                                <option value="@category.Value" selected="@category.IsSelected">@category.Text</option>
                            }
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label asp-for="Unit" class="form-label"></label>
                        <input asp-for="Unit" class="form-control" placeholder="Ex: UN, KG, L" />
                        <span asp-validation-for="Unit" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-3">
                    <div class="mb-3">
                        <label asp-for="Price" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text">R$</span>
                            <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="0,00" />
                        </div>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="mb-3">
                        <label asp-for="Cost" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text">R$</span>
                            <input asp-for="Cost" type="number" step="0.01" class="form-control" placeholder="0,00" />
                        </div>
                        <span asp-validation-for="Cost" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="mb-3">
                        <label asp-for="CurrentStock" class="form-label"></label>
                        <input asp-for="CurrentStock" type="number" class="form-control" placeholder="0" />
                        <span asp-validation-for="CurrentStock" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="mb-3">
                        <label asp-for="MinStock" class="form-label"></label>
                        <input asp-for="MinStock" type="number" class="form-control" placeholder="0" />
                        <span asp-validation-for="MinStock" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Campos específicos para Produto Composto -->
            <div id="compositeFields" class="d-none">
                <div class="row">
                    <div class="col-md-12">
                        <div class="mb-3">
                            <label asp-for="AssemblyTime" class="form-label"></label>
                            <div class="input-group">
                                <input asp-for="AssemblyTime" type="number" class="form-control" placeholder="0" />
                                <span class="input-group-text">min</span>
                            </div>
                            <span asp-validation-for="AssemblyTime" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Campos específicos para Grupo de Produtos -->
            <div id="groupFields" class="d-none">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="MinItemsRequired" class="form-label"></label>
                            <input asp-for="MinItemsRequired" type="number" class="form-control" placeholder="0" />
                            <span asp-validation-for="MinItemsRequired" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="MaxItemsAllowed" class="form-label"></label>
                            <input asp-for="MaxItemsAllowed" type="number" class="form-control" placeholder="0" />
                            <span asp-validation-for="MaxItemsAllowed" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Informativo sobre funcionalidades avançadas -->
    <div class="alert alert-info mt-3">
        <i class="fas fa-info-circle"></i>
        <strong>Informação:</strong> Após criar o produto, você poderá configurar componentes, itens do grupo e outras funcionalidades avançadas através da opção "Editar".
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
            <i class="fas fa-times"></i> Cancelar
        </button>
        <button type="button" class="btn btn-primary" onclick="productManager.salvarNovoProduct()">
            <i class="fas fa-save"></i> Criar Produto
        </button>
    </div>
</form>

<script>
    // Mostrar/ocultar campos específicos baseado no tipo de produto
    document.getElementById('productTypeSelect').addEventListener('change', function() {
        const productType = this.value;
        const compositeFields = document.getElementById('compositeFields');
        const groupFields = document.getElementById('groupFields');
        
        // Ocultar todos os campos específicos
        compositeFields.classList.add('d-none');
        groupFields.classList.add('d-none');
        
        // Mostrar campos específicos baseado no tipo
        if (productType === '1') { // Composite
            compositeFields.classList.remove('d-none');
        } else if (productType === '2') { // Group
            groupFields.classList.remove('d-none');
        }
    });
    
    // Disparar evento para configuração inicial
    document.getElementById('productTypeSelect').dispatchEvent(new Event('change'));
</script> 