@using GesN.Web.Models.ViewModels.Production
@model List<ProductGroupExchangeRuleViewModel>

<div class="product-group-section">
    <div class="section-header">
        <h6 class="section-title">
            <i class="fas fa-exchange-alt"></i> Regras de Troca
        </h6>
        <button type="button" class="btn btn-primary btn-sm" onclick="ProductGroup.showCreateExchangeRuleModal('@ViewBag.ProductId')">
            <i class="fas fa-plus"></i> Adicionar Regra
        </button>
    </div>

    <div class="section-content">
        @if (Model?.Any() == true)
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Produto Original</th>
                            <th>Produto de Troca</th>
                            <th>Proporção</th>
                            <th>Custo Adicional</th>
                            <th>Status</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var rule in Model)
                        {
                            <tr class="@(rule.IsActive ? "" : "table-secondary")">
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div>
                                            <strong>@(rule.OriginalProductName ?? "Produto não identificado")</strong>
                                            <br><small class="text-muted">ID: @rule.OriginalProductId</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div>
                                            <strong>@(rule.ExchangeProductName ?? "Produto não identificado")</strong>
                                            <br><small class="text-muted">ID: @rule.ExchangeProductId</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-info">
                                        1:@rule.ExchangeRatio.ToString("N2")
                                    </span>
                                    @if (rule.ExchangeRatio != 1)
                                    {
                                        <br><small class="text-muted">
                                            @(rule.ExchangeRatio > 1 ? "Mais caro" : "Mais barato")
                                        </small>
                                    }
                                </td>
                                <td>
                                    @if (rule.AdditionalCost.HasValue && rule.AdditionalCost > 0)
                                    {
                                        <span class="text-warning">+ @rule.AdditionalCost.Value.ToString("C")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">--</span>
                                    }
                                </td>
                                <td>
                                    @if (rule.IsActive)
                                    {
                                        <span class="badge bg-success">Ativa</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inativa</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <button type="button" class="btn btn-outline-primary" 
                                                onclick="ProductGroup.showEditExchangeRuleModal('@rule.Id')"
                                                title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        @if (rule.IsActive)
                                        {
                                            <button type="button" class="btn btn-outline-warning" 
                                                    onclick="ProductGroup.toggleExchangeRuleStatus('@rule.Id', false)"
                                                    title="Desativar">
                                                <i class="fas fa-pause"></i>
                                            </button>
                                        }
                                        else
                                        {
                                            <button type="button" class="btn btn-outline-success" 
                                                    onclick="ProductGroup.toggleExchangeRuleStatus('@rule.Id', true)"
                                                    title="Ativar">
                                                <i class="fas fa-play"></i>
                                            </button>
                                        }
                                        <button type="button" class="btn btn-outline-danger" 
                                                onclick="ProductGroup.confirmDeleteExchangeRule('@rule.Id', '@rule.OriginalProductName', '@rule.ExchangeProductName')"
                                                title="Excluir">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-state">
                <div class="text-center py-4">
                    <i class="fas fa-exchange-alt fa-3x text-muted mb-3"></i>
                    <h6 class="text-muted">Nenhuma regra de troca definida</h6>
                    <p class="text-muted">Adicione regras de troca para permitir substituições entre produtos do grupo.</p>
                    <button type="button" class="btn btn-primary" onclick="ProductGroup.showCreateExchangeRuleModal('@ViewBag.ProductId')">
                        <i class="fas fa-plus"></i> Adicionar Primeira Regra
                    </button>
                </div>
            </div>
        }
    </div>
</div> 