@using GesN.Web.Models.ViewModels.Production
@using GesN.Web.Models.Enumerators
@model EditProductWithGroupsViewModel

@{
    // Verificações defensivas
    if (Model == null) 
    {
        throw new ArgumentNullException(nameof(Model), "O modelo não pode ser nulo");
    }
    
    var isComposite = Model.IsComposite;
    var isGroup = Model.IsGroup;
    var productTypeValue = Model.ProductType;
}

@* Incluir CSS dos floating labels *@
<link href="~/css/product-form.css" rel="stylesheet" />

@* Incluir token de antiforgery para chamadas AJAX *@
@Html.AntiForgeryToken()

<div class="container-fluid product-edit-container" data-product-id="@ViewBag.ProductId" data-is-composite="@isComposite.ToString().ToLower()" data-is-group="@isGroup.ToString().ToLower()">
    <div class="row">
        <!-- Navegação por Abas -->
        <div class="col-12">
            <ul class="nav nav-tabs" id="productEditTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="basic-tab" data-bs-toggle="tab" 
                            data-bs-target="#basic-tab-pane" type="button" role="tab">
                        <i class="fas fa-box"></i> Dados Básicos
                    </button>
                </li>
                
                @if (isComposite)
                {
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="hierarchies-tab" data-bs-toggle="tab" data-bs-target="#hierarchies-tab-pane" type="button" role="tab">
                            <i class="fas fa-sitemap"></i> Hierarquias
                        </button>
                    </li>
                 
                }

                @if (isGroup)
                {
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="group-items-tab" data-bs-toggle="tab" 
                                data-bs-target="#group-items-tab-pane" type="button" role="tab">
                            <i class="fas fa-list"></i> Itens do Grupo
                        </button>
                    </li>
                }
            </ul>
        </div>
    </div>

    <!-- Conteúdo das Abas -->
    <div class="row mt-3">
        <div class="col-12">
            <div class="tab-content" id="productEditTabsContent">
                
                <!-- Aba Dados Básicos -->
                <div class="tab-pane fade show active" id="basic-tab-pane" role="tabpanel">
                    <div id="basicDataContainer">
                        @await Html.PartialAsync("_EditBasicData", Model)
                    </div>
                </div>

                <!-- Abas para Composite Products -->
                @if (isComposite)
                {
                    <!-- Aba Componentes -->
                    @* <div class="tab-pane fade" id="components-tab-pane" role="tabpanel">
                        <div id="componentsContainer">
                            @{
                                ViewBag.ProductId = ViewBag.ProductId ?? Model.Id;
                            }
                            @await Html.PartialAsync("_ProductComponents", Model.ComponentIndexViewModel?.Components ?? new List<ProductComponentViewModel>())
                        </div>
                    </div> *@

                    <!-- Aba Hierarquias -->
                    <div class="tab-pane fade" id="hierarchies-tab-pane" role="tabpanel">
                        <div id="hierarchiesContainer">
                            @{
                                ViewBag.ProductId = ViewBag.ProductId ?? Model.Id;
                            }
                            @await Html.PartialAsync("_ProductComponentHierarchies", Model.ProductHierarchies ?? new List<ProductComponentHierarchyViewModel>())
                        </div>
                    </div>

                    <!-- Aba Demandas -->
                    @* <div class="tab-pane fade" id="demands-tab-pane" role="tabpanel">
                        <div id="demandsContainer">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h5 class="mb-0">
                                    <i class="fas fa-tasks"></i> Demandas de Produção
                                </h5>
                                <button type="button" class="btn btn-primary btn-sm" onclick="compositeProductManager.demands.showCreateModal('@ViewBag.ProductId')">
                                    <i class="fas fa-plus"></i> Nova Demanda
                                </button>
                            </div>

                            <!-- Estatísticas Rápidas -->
                            <div class="row mb-3">
                                <div class="col-md-2">
                                    <div class="card bg-warning text-white">
                                        <div class="card-body text-center">
                                            <div class="h4 mb-0" id="demands-pending-count">-</div>
                                            <small>Pendentes</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="card bg-info text-white">
                                        <div class="card-body text-center">
                                            <div class="h4 mb-0" id="demands-confirmed-count">-</div>
                                            <small>Confirmadas</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="card bg-primary text-white">
                                        <div class="card-body text-center">
                                            <div class="h4 mb-0" id="demands-produced-count">-</div>
                                            <small>Produzidas</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="card bg-success text-white">
                                        <div class="card-body text-center">
                                            <div class="h4 mb-0" id="demands-delivered-count">-</div>
                                            <small>Entregues</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="card bg-danger text-white">
                                        <div class="card-body text-center">
                                            <div class="h4 mb-0" id="demands-overdue-count">-</div>
                                            <small>Atrasadas</small>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div id="demands-grid">
                                <!-- Carregará via AJAX -->
                                <div class="text-center py-4">
                                    <div class="spinner-border text-primary" role="status">
                                        <span class="visually-hidden">Carregando...</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div> *@
                }

                <!-- Abas do Grupo (só para Group) -->
                @if (isGroup)
                {
                    <div class="tab-pane fade" id="group-items-tab-pane" role="tabpanel">
                        <div id="groupItemsContainer">
                            @{
                                ViewBag.ProductId = ViewBag.ProductId ?? Model.Id;
                            }
                            @await Html.PartialAsync("_ProductGroupItems", Model.GroupItems)
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Botões de Ação Fixos -->
<div class="d-flex justify-content-end gap-2 mt-3 pt-3 border-top bg-light p-3">
    <button type="button" class="btn btn-secondary" onclick="productManager.cancelarEdicao()">
        <i class="fas fa-times"></i> Cancelar
    </button>
    <button type="button" class="btn btn-primary" onclick="productManager.salvarEdicao()">
        <i class="fas fa-save"></i> Salvar Alterações
    </button>
</div>

@* Scripts necessários para produtos do tipo Group *@
@if (isGroup)
{
    <script src="~/js/ProductGroup.js" asp-append-version="true"></script>
}

@* Scripts necessários para produtos do tipo Composite *@
@if (isComposite)
{
    <script src="~/js/CompositeProduct.js" asp-append-version="true"></script>
    <script src="~/js/ProductComponentHierarchy.js" asp-append-version="true"></script>
    <script src="~/js/Demand.js" asp-append-version="true"></script>
}