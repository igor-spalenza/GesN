@using GesN.Web.Models.ViewModels.Production
@model List<CompositeProductXHierarchyViewModel>

<div class="product-hierarchy-section">
    <div class="section-header">
        <h6 class="section-title">
            <i class="fas fa-sitemap"></i> Hierarquias de Componentes
        </h6>
        <div class="d-flex gap-2">
            <button type="button" class="btn btn-primary btn-sm" onclick="CompositeProduct.showCreateHierarchyModal('@ViewBag.ProductId')">
                <i class="fas fa-plus"></i> Nova Hierarquia
            </button>
            <button type="button" class="btn btn-outline-secondary btn-sm" onclick="CompositeProduct.showAssignHierarchyModalWithConfig('@ViewBag.ProductId')">
                <i class="fas fa-link"></i> Associar Existente
            </button>
        </div>
    </div>

    <div class="section-content">
        @if (Model?.Any() == true)
        {
            <div class="table-responsive">
                <table class="table table-hover" id="hierarchyRelationsTable">
                    <thead class="table-light">
                        <tr>
                            <th>Ordem</th>
                            <th>Hierarquia</th>
                            <th>Configuração</th>
                            <th>Quantidade</th>
                            <th>Tipo</th>
                            <th>Status</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var relation in Model.OrderBy(r => r.AssemblyOrder))
                        {
                            <tr data-relation-id="@relation.Id" data-assembly-order="@relation.AssemblyOrder">
                                <td>
                                    <div class="d-flex align-items-center">
                                        <span class="badge bg-secondary me-2">@relation.AssemblyOrder</span>
                                        @* <div class="btn-group btn-group-sm" role="group">
                                            <button type="button" class="btn btn-outline-secondary btn-sm" onclick="CompositeProduct.moveHierarchyUp('@relation.Id')" title="Mover para cima">
                                                <i class="fas fa-arrow-up"></i>
                                            </button>
                                            <button type="button" class="btn btn-outline-secondary btn-sm" onclick="CompositeProduct.moveHierarchyDown('@relation.Id')" title="Mover para baixo">
                                                <i class="fas fa-arrow-down"></i>
                                            </button>
                                        </div> *@
                                    </div>
                                </td>
                                <td>
                                    <div>
                                        <strong>@relation.HierarchyName</strong>
                                        @if (!string.IsNullOrEmpty(relation.HierarchyDescription))
                                        {
                                            <br><small class="text-muted">@(relation.HierarchyDescription.Length > 50 ? relation.HierarchyDescription.Substring(0, 50) + "..." : relation.HierarchyDescription)</small>
                                        }
                                        else
                                        {
                                            <br><small class="text-muted">Hierarquia de componentes</small>
                                        }
                                    </div>
                                </td>
                                <td>
                                    <div class="small text-center">
                                        @if (!string.IsNullOrEmpty(relation.Notes))
                                        {
                                            <div class="text-muted" title="@relation.Notes">
                                                <i class="fas fa-sticky-note"></i> Observações
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </div>
                                </td>
                                <td>
                                    <div class="text-center">
                                        <span class="badge bg-primary">@relation.MinQuantity</span>
                                        @if (relation.MaxQuantity > 0)
                                        {
                                            <span> - </span>
                                            <span class="badge bg-primary">@relation.MaxQuantity</span>
                                        }
                                        else
                                        {
                                            <span> - </span>
                                            <span class="badge bg-info">∞</span>
                                        }
                                        <br><small class="text-muted">@relation.QuantityRangeDisplay</small>
                                    </div>
                                </td>
                                <td>
                                    <div class="text-center">
                                        @if (relation.IsOptional)
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="fas fa-question-circle"></i> @relation.OptionalDisplay
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fas fa-exclamation-circle"></i> Obrigatória
                                            </span>
                                        }
                                    </div>
                                </td>
                                <td>
                                    <div class="text-center">
                                        <span class="badge bg-success">Ativo</span>
                                    </div>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <button type="button" class="btn btn-outline-info" 
                                                onclick="CompositeProduct.showRelationDetailsModal('@relation.Id')"
                                                title="Detalhes da Relação">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                        <button type="button" class="btn btn-outline-primary" 
                                                onclick="CompositeProduct.showEditRelationModal('@relation.Id')"
                                                title="Editar Configuração">
                                            <i class="bi bi-pencil"></i>
                                        </button>
                                        <button type="button" class="btn btn-outline-danger" 
                                                onclick="CompositeProduct.confirmRemoveRelation('@relation.Id', '@relation.HierarchyName')"
                                                title="Deletar Relação">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                           </tr>
                       }
                   </tbody>
               </table>
           </div>
       }
       else
       {
           <div class="empty-state">
               <div class="text-center py-4">
                   <i class="fas fa-sitemap fa-3x text-muted mb-3"></i>
                   <h6 class="text-muted">Nenhuma hierarquia configurada</h6>
                   <p class="text-muted">Configure hierarquias para este produto composto definindo quantidades, ordem de montagem e outras propriedades específicas.</p>
                   <div class="d-flex gap-2 justify-content-center">
                       <button type="button" class="btn btn-primary" onclick="CompositeProduct.showCreateHierarchyModal('@ViewBag.ProductId')">
                           <i class="fas fa-plus"></i> Criar Nova Hierarquia
                       </button>
                       <button type="button" class="btn btn-outline-primary" onclick="CompositeProduct.showAssignHierarchyModalWithConfig('@ViewBag.ProductId')">
                           <i class="fas fa-link"></i> Configurar Hierarquia Existente
                       </button>
                   </div>
               </div>
           </div>
       }
   </div>
</div> 