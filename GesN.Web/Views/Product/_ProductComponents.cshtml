@using GesN.Web.Models.ViewModels.Production
@using GesN.Web.Models.Enumerators
@model List<ProductComponentViewModel>

<div class="product-component-section">
    <div class="section-header">
        <h6 class="section-title">
            <i class="fas fa-puzzle-piece"></i> Componentes do Produto
        </h6>
        <button type="button" class="btn btn-primary btn-sm" onclick="productComponentsManager.novoComponenteModal()">
            <i class="fas fa-plus"></i> Adicionar Componente
        </button>
    </div>

    <div class="section-content">
        @if (Model?.Any() == true)
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Nome</th>
                            <th>Descrição</th>
                            <th>Hierarquia</th>
                            <th>Custo Adicional</th>
                            <th>Status</th>
                            <th>Criado em</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var component in Model.OrderBy(c => c.Name))
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div>
                                            <strong>@component.Name</strong>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    @if (!string.IsNullOrWhiteSpace(component.Description))
                                    {
                                        <span class="text-truncate d-inline-block" style="max-width: 200px;" title="@component.Description">
                                            @component.Description
                                        </span>
                                    }
                                    else
                                    {
                                        <em class="text-muted">-</em>
                                    }
                                </td>
                                <td>
                                    <span class="badge badge-secondary">
                                        @(component.ProductComponentHierarchyName ?? "Não definida")
                                    </span>
                                </td>
                                <td>
                                    <span class="fw-bold text-success">
                                        @component.FormattedAdditionalCost
                                    </span>
                                </td>
                                <td>
                                    @if (component.StateCode == GesN.Web.Models.Enumerators.ObjectState.Active)
                                    {
                                        <span class="badge badge-success">
                                            <i class="fas fa-check-circle"></i>
                                            Ativo
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger">
                                            <i class="fas fa-times-circle"></i>
                                            Inativo
                                        </span>
                                    }
                                </td>
                                <td>
                                    <small class="text-muted">
                                        @component.FormattedCreatedAt
                                    </small>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <button type="button" class="btn btn-outline-info" 
                                                onclick="productComponentsManager.verDetalhes('@component.Id')"
                                                title="Detalhes">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button type="button" class="btn btn-outline-primary" 
                                                onclick="productComponentsManager.editarComponente('@component.Id', '@component.Name')"
                                                title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button type="button" class="btn btn-outline-danger" 
                                                onclick="productComponentsManager.excluirComponente('@component.Id', '@component.Name')"
                                                title="Excluir">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-state">
                <div class="text-center py-4">
                    <i class="fas fa-puzzle-piece fa-3x text-muted mb-3"></i>
                    <h6 class="text-muted">Nenhum componente adicionado</h6>
                    <p class="text-muted">Adicione componentes para formar este produto composto.</p>
                    <button type="button" class="btn btn-primary" onclick="productComponentsManager.novoComponenteModal()">
                        <i class="fas fa-plus"></i> Adicionar Primeiro Componente
                    </button>
                </div>
            </div>
        }
    </div>
</div> 