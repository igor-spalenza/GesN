@model GesN.Web.Models.ViewModels.Production.ProductComponentHierarchyIndexViewModel

@{
    ViewData["Title"] = "Hierarquias de Componentes";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

@* Incluir CSS específico do domínio Product *@
<link href="~/css/ProductDomain.css" rel="stylesheet" />

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">@ViewData["Title"]</h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-primary btn-sm" onclick="hierarchyManager.novoHierarchyModal()">
                            <i class="fas fa-plus"></i> Nova Hierarquia
                        </button>
                    </div>
                </div>
                <div class="card-body p-0">
                    <!-- Container para as abas -->
                    <div class="card card-primary card-tabs">
                        <div class="card-header p-0 pt-1">
                            <ul class="nav nav-tabs" id="hierarchyTabs" role="tablist">
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link active" id="main-tab" data-bs-toggle="tab" data-bs-target="#main" type="button" role="tab">
                                        <i class="fas fa-list"></i> Lista de Hierarquias
                                    </button>
                                </li>
                            </ul>
                        </div>
                        <div class="card-body">
                            <div class="tab-content" id="hierarchyTabsContent">
                                <div class="main-div tab-pane fade show active" id="main" role="tabpanel">
                                    <div id="lista-hierarchies-container">
                                        @if (Model.Hierarchies.Any())
                                        {
                                            <div class="table-responsive">
                                                <table class="table table-bordered table-striped" id="hierarchies-table">
                                                    <thead>
                                                        <tr>
                                                            <th>Nome</th>
                                                            <th>Descrição</th>
                                                            <th>Componentes</th>
                                                            <th>Status</th>
                                                            <th>Criado em</th>
                                                            <th>Ações</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var hierarchy in Model.Hierarchies.OrderBy(h => h.Name))
                                                        {
                                                            <tr>
                                                                <td>
                                                                    <div class="d-flex align-items-center">
                                                                        <i class="fas fa-sitemap text-muted me-2"></i>
                                                                        <div>
                                                                            <strong>@hierarchy.Name</strong>
                                                                        </div>
                                                                    </div>
                                                                </td>
                                                                <td>
                                                                    @if (!string.IsNullOrWhiteSpace(hierarchy.Description))
                                                                    {
                                                                        <span class="text-truncate d-inline-block" style="max-width: 200px;" title="@hierarchy.Description">
                                                                            @hierarchy.Description
                                                                        </span>
                                                                    }
                                                                    else
                                                                    {
                                                                        <em class="text-muted">-</em>
                                                                    }
                                                                </td>
                                                                <td>
                                                                    <span class="badge bg-info">
                                                                        @hierarchy.ComponentCount
                                                                    </span>
                                                                </td>
                                                                <td>
                                                                    @if (hierarchy.IsActive)
                                                                    {
                                                                        <span class="badge bg-success">
                                                                            <i class="fas fa-check-circle"></i>
                                                                            Ativa
                                                                        </span>
                                                                    }
                                                                    else
                                                                    {
                                                                        <span class="badge bg-secondary">
                                                                            <i class="fas fa-times-circle"></i>
                                                                            Inativa
                                                                        </span>
                                                                    }
                                                                </td>
                                                                <td>
                                                                    <small class="text-muted">
                                                                        @hierarchy.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                                                                    </small>
                                                                </td>
                                                                <td>
                                                                    <div class="btn-group btn-group-sm" role="group">
                                                                        <button type="button" class="btn btn-outline-primary"
                                                                                onclick="hierarchyManager.verDetalhes('@hierarchy.Id')"
                                                                                title="Detalhes">
                                                                            <i class="bi bi-eye"></i>
                                                                        </button>
                                                                        <button type="button" class="btn btn-outline-warning" 
                                                                                onclick="hierarchyManager.editarHierarchy('@hierarchy.Id', '@hierarchy.Name')"
                                                                                title="Editar">
                                                                            <i class="bi bi-pencil"></i>
                                                                        </button>
                                                                        <button type="button" class="btn btn-outline-danger" 
                                                                                onclick="hierarchyManager.excluirHierarchy('@hierarchy.Id', '@hierarchy.Name')"
                                                                                title="Excluir">
                                                                            <i class="bi bi-trash"></i>
                                                                        </button>
                                                                    </div>
                                                                </td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="text-center text-muted py-4">
                                                <i class="fas fa-sitemap fa-3x mb-3"></i>
                                                <h6 class="text-muted">Nenhuma hierarquia encontrada</h6>
                                                <p class="text-muted">Crie hierarquias para organizar os componentes.</p>
                                                <button type="button" class="btn btn-primary" onclick="hierarchyManager.novoHierarchyModal()">
                                                    <i class="fas fa-plus"></i> Criar Primeira Hierarquia
                                                </button>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal para criar/visualizar hierarquias (edição usa abas) -->
<div class="modal fade" id="hierarchyModal" tabindex="-1" aria-labelledby="hierarchyModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="hierarchyModalLabel">Hierarquia</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Conteúdo será carregado dinamicamente -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/ProductComponentHierarchy.js"></script>
} 