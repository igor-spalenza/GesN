@using GesN.Web.Models.ViewModels.Production
@using GesN.Web.Models.Enumerators
@model IngredientDetailsViewModel

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Detalhes do Ingrediente</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">Nome</label>
                                <p class="form-control-plaintext">@Model.Name</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">Unidade</label>
                                <p class="form-control-plaintext">
                                    <span class="badge bg-info">@EnumHelper.GetDescription(Model.Unit)</span>
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label text-muted">Descrição</label>
                        <p class="form-control-plaintext">
                            @if (!string.IsNullOrWhiteSpace(Model.Description))
                            {
                                @Model.Description
                            }
                            else
                            {
                                <span class="text-muted">Sem descrição</span>
                            }
                        </p>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">Custo por Unidade</label>
                                <p class="form-control-plaintext">
                                    <strong class="text-success">@Model.CostPerUnit.ToString("C")</strong>
                                </p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">Fornecedor</label>
                                <p class="form-control-plaintext">
                                    @if (!string.IsNullOrWhiteSpace(Model.SupplierName))
                                    {
                                        @Model.SupplierName
                                    }
                                    else
                                    {
                                        <span class="text-muted">Não informado</span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">Estoque Atual</label>
                                <p class="form-control-plaintext">
                                    <strong class="@(Model.CurrentStock <= Model.MinStock ? "text-warning" : "text-primary")">
                                        @Model.CurrentStock.ToString("N2") @EnumHelper.GetDescription(Model.Unit)
                                    </strong>
                                    @if (Model.CurrentStock <= Model.MinStock)
                                    {
                                        <span class="badge bg-warning text-dark ms-2">Estoque Baixo</span>
                                    }
                                </p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">Estoque Mínimo</label>
                                <p class="form-control-plaintext">
                                    <strong class="text-warning">@Model.MinStock.ToString("N2") @EnumHelper.GetDescription(Model.Unit)</strong>
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">Dias para Expiração</label>
                                <p class="form-control-plaintext">
                                    @if (Model.ExpirationDays.HasValue && Model.ExpirationDays > 0)
                                    {
                                        <span>@Model.ExpirationDays dias</span>
                                        @if (Model.ExpirationDays <= 7)
                                        {
                                            <span class="badge bg-danger ms-2">Perecível</span>
                                        }
                                        else if (Model.ExpirationDays <= 30)
                                        {
                                            <span class="badge bg-warning text-dark ms-2">Atenção</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">Não expira</span>
                                    }
                                </p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">Status</label>
                                <p class="form-control-plaintext">
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success">Ativo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inativo</span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <button type="button" class="btn btn-outline-info" onclick="ingredientsManager.atualizarEstoque('@Model.Id')">
                            <i class="bi bi-arrow-up-circle"></i> Atualizar Estoque
                        </button>
                        <button type="button" class="btn btn-primary" onclick="ingredientsManager.editarIngredient('@Model.Id')">
                            <i class="bi bi-pencil"></i> Editar
                        </button>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">Informações do Registro</h6>
                </div>
                <div class="card-body">
                    <small class="text-muted">
                        <strong>ID:</strong> @Model.Id<br />
                        <strong>Criado em:</strong> @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")<br />
                        @if (Model.LastModifiedAt.HasValue)
                        {
                            <strong>Atualizado em:</strong> @Model.LastModifiedAt.Value.ToString("dd/MM/yyyy HH:mm")<br />
                        }
                        <strong>Status:</strong> 
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Ativo</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inativo</span>
                        }
                    </small>
                </div>
            </div>

            <!-- Card de Status do Estoque -->
            <div class="card mt-3">
                <div class="card-header">
                    <h6 class="mb-0">Status do Estoque</h6>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6">
                            <div class="border rounded p-2 @(Model.CurrentStock <= Model.MinStock ? "border-warning" : "border-primary")">
                                <strong class="@(Model.CurrentStock <= Model.MinStock ? "text-warning" : "text-primary")">
                                    @Model.CurrentStock.ToString("N2")
                                </strong>
                                <br />
                                <small class="text-muted">Atual</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="border border-warning rounded p-2">
                                <strong class="text-warning">@Model.MinStock.ToString("N2")</strong>
                                <br />
                                <small class="text-muted">Mínimo</small>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mt-3">
                        <div class="d-flex justify-content-between">
                            <small class="text-muted">Valor Total em Estoque:</small>
                            <strong class="text-success">@((Model.CurrentStock * Model.CostPerUnit).ToString("C"))</strong>
                        </div>
                    </div>

                    @if (Model.CurrentStock <= Model.MinStock)
                    {
                        <div class="alert alert-warning mt-2 mb-0">
                            <i class="bi bi-exclamation-triangle"></i> Estoque baixo! Considere reabastecer.
                        </div>
                    }
                </div>
            </div>

            <!-- Card com ações rápidas -->
            <div class="card mt-3">
                <div class="card-header">
                    <h6 class="mb-0">Ações Rápidas</h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <button type="button" class="btn btn-outline-primary btn-sm" onclick="ingredientsManager.editarIngredient('@Model.Id')">
                            <i class="bi bi-pencil"></i> Editar Ingrediente
                        </button>
                        <button type="button" class="btn btn-outline-info btn-sm" onclick="ingredientsManager.atualizarEstoque('@Model.Id')">
                            <i class="bi bi-arrow-up-circle"></i> Atualizar Estoque
                        </button>
                        <button type="button" class="btn btn-outline-warning btn-sm" onclick="alert('Funcionalidade em desenvolvimento')">
                            <i class="bi bi-graph-up"></i> Ver Histórico
                        </button>
                        <button type="button" class="btn btn-outline-secondary btn-sm" onclick="alert('Funcionalidade em desenvolvimento')">
                            <i class="bi bi-file-text"></i> Gerar Relatório
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 