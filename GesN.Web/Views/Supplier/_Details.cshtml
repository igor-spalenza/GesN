@using GesN.Web.Models.ViewModels.Production
@using GesN.Web.Models.Enumerators
@model SupplierDetailsViewModel

<div class="card">
    <div class="card-header">
        <h6 class="card-title mb-0">
            <i class="bi bi-info-circle"></i> Detalhes do Fornecedor
        </h6>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label fw-bold">Nome</label>
                    <p class="form-control-plaintext">@Model.Name</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label fw-bold">Nome da Empresa</label>
                    <p class="form-control-plaintext">
                        @if (!string.IsNullOrWhiteSpace(Model.CompanyName))
                        {
                            @Model.CompanyName
                        }
                        else
                        {
                            <span class="text-muted">Não informado</span>
                        }
                    </p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label fw-bold">Tipo de Documento</label>
                    <p class="form-control-plaintext">
                        @if (Model.DocumentType.HasValue)
                        {
                            @EnumHelper.GetDescription(Model.DocumentType.Value)
                        }
                        else
                        {
                            <span class="text-muted">Não informado</span>
                        }
                    </p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label fw-bold">Número do Documento</label>
                    <p class="form-control-plaintext">
                        @if (!string.IsNullOrWhiteSpace(Model.DocumentNumber))
                        {
                            @Model.DocumentNumber
                        }
                        else
                        {
                            <span class="text-muted">Não informado</span>
                        }
                    </p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label fw-bold">Email</label>
                    <p class="form-control-plaintext">
                        @if (!string.IsNullOrWhiteSpace(Model.Email))
                        {
                            <a href="mailto:@Model.Email">@Model.Email</a>
                        }
                        else
                        {
                            <span class="text-muted">Não informado</span>
                        }
                    </p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label fw-bold">Telefone</label>
                    <p class="form-control-plaintext">
                        @if (!string.IsNullOrWhiteSpace(Model.Phone))
                        {
                            <a href="tel:@Model.Phone">@Model.Phone</a>
                        }
                        else
                        {
                            <span class="text-muted">Não informado</span>
                        }
                    </p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label fw-bold">Status</label>
                    <p class="form-control-plaintext">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Ativo</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inativo</span>
                        }
                    </p>
                </div>
            </div>
        </div>

        <!-- Metadados -->
        <hr />
        <h6 class="text-muted">Informações de Auditoria</h6>
        
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label fw-bold">Criado em</label>
                    <p class="form-control-plaintext">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label fw-bold">Última modificação</label>
                    <p class="form-control-plaintext">
                        @if (Model.LastModifiedAt.HasValue)
                        {
                            @Model.LastModifiedAt.Value.ToString("dd/MM/yyyy HH:mm")
                        }
                        else
                        {
                            <span class="text-muted">Nunca modificado</span>
                        }
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
        <i class="bi bi-x"></i> Fechar
    </button>
    <button type="button" class="btn btn-primary" onclick="suppliersManager.editarSupplier('@Model.Id')">
        <i class="bi bi-pencil"></i> Editar
    </button>
</div> 