@using GesN.Web.Models.ViewModels.Production
@using GesN.Web.Models.Enumerators
@model SupplierDetailsViewModel

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Detalhes do Fornecedor</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">Nome</label>
                                <p class="form-control-plaintext">@Model.Name</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">Nome da Empresa</label>
                                <p class="form-control-plaintext">
                                    @if (!string.IsNullOrWhiteSpace(Model.CompanyName))
                                    {
                                        @Model.CompanyName
                                    }
                                    else
                                    {
                                        <span class="text-muted">Não informado</span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">Tipo de Documento</label>
                                <p class="form-control-plaintext">
                                    @if (Model.DocumentType.HasValue)
                                    {
                                        @EnumHelper.GetDescription(Model.DocumentType.Value)
                                    }
                                    else
                                    {
                                        <span class="text-muted">Não informado</span>
                                    }
                                </p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">Número do Documento</label>
                                <p class="form-control-plaintext">
                                    @if (!string.IsNullOrWhiteSpace(Model.DocumentNumber))
                                    {
                                        @Model.DocumentNumber
                                    }
                                    else
                                    {
                                        <span class="text-muted">Não informado</span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">Email</label>
                                <p class="form-control-plaintext">
                                    @if (!string.IsNullOrWhiteSpace(Model.Email))
                                    {
                                        <a href="mailto:@Model.Email">@Model.Email</a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Não informado</span>
                                    }
                                </p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">Telefone</label>
                                <p class="form-control-plaintext">
                                    @if (!string.IsNullOrWhiteSpace(Model.Phone))
                                    {
                                        <a href="tel:@Model.Phone">@Model.Phone</a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Não informado</span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">Status</label>
                                <p class="form-control-plaintext">
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success">Ativo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inativo</span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <button type="button" class="btn btn-primary" onclick="suppliersManager.editarSupplier('@Model.Id')">
                            <i class="bi bi-pencil"></i> Editar
                        </button>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">Informações do Registro</h6>
                </div>
                <div class="card-body">
                    <small class="text-muted">
                        <strong>ID:</strong> @Model.Id<br />
                        <strong>Criado em:</strong> @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")<br />
                        @if (Model.LastModifiedAt.HasValue)
                        {
                            <strong>Atualizado em:</strong> @Model.LastModifiedAt.Value.ToString("dd/MM/yyyy HH:mm")<br />
                        }
                        <strong>Status:</strong> 
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Ativo</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inativo</span>
                        }
                    </small>
                </div>
            </div>

            <!-- Card com estatísticas ou informações adicionais -->
            <div class="card mt-3">
                <div class="card-header">
                    <h6 class="mb-0">Ações Rápidas</h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <button type="button" class="btn btn-outline-primary btn-sm" onclick="suppliersManager.editarSupplier('@Model.Id')">
                            <i class="bi bi-pencil"></i> Editar Fornecedor
                        </button>
                        <button type="button" class="btn btn-outline-info btn-sm" onclick="alert('Funcionalidade em desenvolvimento')">
                            <i class="bi bi-box"></i> Ver Ingredientes
                        </button>
                        <button type="button" class="btn btn-outline-warning btn-sm" onclick="alert('Funcionalidade em desenvolvimento')">
                            <i class="bi bi-file-text"></i> Gerar Relatório
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 