@using GesN.Web.Models.ViewModels.Production
@using GesN.Web.Models.Enumerators
@model IEnumerable<SupplierDetailsViewModel>

<!-- Barra de Pesquisa -->
<div class="d-flex gap-2">
    <div class="col-md-4">
        <button type="button" class="btn btn-outline-secondary w-100" onclick="suppliersManager.carregarListaSuppliers()">
            <i class="bi bi-arrow-clockwise"></i>
        </button>
    </div>
</div>

<!-- Tabela de Fornecedores -->
@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover" id="suppliersTable">
            <thead class="table-dark">
                <tr>
                    <th>Nome</th>
                    <th>Empresa</th>
                    <th>Documento</th>
                    <th>Contato</th>
                    <th>Status</th>
                    <th>Criado em</th>
                    <th width="120">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var supplier in Model)
                {
                    <tr>
                        <td>
                            <strong>@supplier.Name</strong>
                        </td>
                        <td>
                            @if (!string.IsNullOrWhiteSpace(supplier.CompanyName))
                            {
                                @supplier.CompanyName
                            }
                            else
                            {
                                <span class="text-muted">Não informado</span>
                            }
                        </td>
                        <td>
                            @if (!string.IsNullOrWhiteSpace(supplier.DocumentNumber))
                            {
                                <span>@supplier.DocumentNumber</span>
                                <br />
                                <small class="text-muted">@(supplier.DocumentType.HasValue ? EnumHelper.GetDescription(supplier.DocumentType.Value) : "")</small>
                            }
                            else
                            {
                                <span class="text-muted">Não informado</span>
                            }
                        </td>
                        <td>
                            @if (!string.IsNullOrWhiteSpace(supplier.Email))
                            {
                                <span>@supplier.Email</span>
                            }
                            @if (!string.IsNullOrWhiteSpace(supplier.Phone))
                            {
                                @if (!string.IsNullOrWhiteSpace(supplier.Email))
                                {
                                    <br />
                                }
                                <small class="text-muted">@supplier.Phone</small>
                            }
                            @if (string.IsNullOrWhiteSpace(supplier.Email) && string.IsNullOrWhiteSpace(supplier.Phone))
                            {
                                <span class="text-muted">Não informado</span>
                            }
                        </td>
                        <td>
                            @if (supplier.IsActive)
                            {
                                <span class="badge bg-success">Ativo</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inativo</span>
                            }
                        </td>
                        <td>@supplier.CreatedAt.ToString("dd/MM/yyyy")</td>
                        <td>
                            <div class="btn-group" role="group">
                                <button type="button" class="btn btn-outline-primary btn-sm" 
                                        onclick="suppliersManager.verDetalhes('@supplier.Id')" 
                                        title="Visualizar">
                                    <i class="bi bi-eye"></i>
                                </button>
                                <button type="button" class="btn btn-outline-secondary btn-sm" 
                                        onclick="suppliersManager.editarSupplier('@supplier.Id')" 
                                        title="Editar">
                                    <i class="bi bi-pencil"></i>
                                </button>
                                <button type="button" class="btn btn-outline-danger btn-sm" 
                                        onclick="suppliersManager.excluirSupplier('@supplier.Id', '@supplier.Name')" 
                                        title="Excluir">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="text-center py-5">
        <div class="mb-3">
            <i class="bi bi-truck display-1 text-muted"></i>
        </div>
        <h5 class="text-muted">Nenhum fornecedor encontrado</h5>
        <p class="text-muted">Comece criando seu primeiro fornecedor!</p>
        <button type="button" class="btn btn-primary" onclick="suppliersManager.novoSupplierModal()">
            <i class="bi bi-plus"></i> Criar Primeiro Fornecedor
        </button>
    </div>
}

@if (Model.Any())
{
    <!-- Informações da Tabela -->
    <div class="row mt-3">
        <div class="col-md-6">
            <small class="text-muted">
                Mostrando @Model.Count() fornecedor(es)
            </small>
        </div>
        <div class="col-md-6 text-end">
            <small class="text-muted">
                <i class="bi bi-clock"></i> Atualizado em @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
            </small>
        </div>
    </div>
} 