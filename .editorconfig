# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true

# TypeScript, JavaScript, JSON
[*.{ts,js,json,jsonc}]
indent_size = 4
end_of_line = crlf

# CSS, SCSS, SASS
[*.{css,scss,sass,less}]
indent_size = 2
end_of_line = crlf

# HTML, Razor
[*.{html,cshtml,razor}]
indent_size = 4
end_of_line = crlf

# C#
[*.{cs,csx}]
indent_size = 4
end_of_line = crlf

# XML project files
[*.{csproj,vbproj,vcxproj,vcxproj.filters,proj,projitems,shproj}]
indent_size = 2
end_of_line = crlf

# XML config files
[*.{props,targets,ruleset,config,nuspec,resx,vsixmanifest,vsct}]
indent_size = 2
end_of_line = crlf

# JSON files
[*.json]
indent_size = 2
end_of_line = crlf

# YAML files
[*.{yml,yaml}]
indent_size = 2
end_of_line = crlf

# Markdown files
[*.{md,mdx}]
trim_trailing_whitespace = false
end_of_line = crlf

# Batch files
[*.{cmd,bat}]
end_of_line = crlf

# Shell scripts
[*.sh]
end_of_line = lf
